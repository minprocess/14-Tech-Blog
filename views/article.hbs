<div style="background-color: var(--dark); width: 100%; padding: 20px 0px;">
  <h2 class="tech-brand">The Tech Blog</h2>
</div>

<div class="card">
  <div class="card-header">
    <h3 style="color: var(--primary)">{{title}}</h3>
    <div style="float:right;">
      <h4 style="float:right; color: var(--primary)">{{user.name}}</h4>
    </div>
  </div>
  <div class="card-body">
    {{text}}
  </div>
</div>

<!-- Show comments if any -->
{{#each comments as |comment| }}
  <div class="card">
    <div class="card-header">
    </div>
    <div class="card-body">
      <p>{{comment.text}}</p>
      <p>{{comment.user.name}}  {{format_date comment.date_created}} </p>
    </div>
  </div>
{{/each}}

<!-- Textarea for comment is automatic -->
<div class="card">
  <div class="card-header">
  </div>
  <div class="card-body">
    <label for="comment">Comment:</label>
    <textarea class="form-textarea" id="comment" placeholder="Great article!" data-id="{{id}}"></textarea>
    <button class="btn btn-primary new-comment" style="padding:20px 20px; margin-bottom: 20px;" type="button" data-id="{{user.id}}">Submit</button>
  </div>
</div>
<script src="/js/newcomment.js"></script>