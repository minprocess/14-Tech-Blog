<!-- User got here by clicking on an article title in the list of articles in dashboard.hbs -->
<!-- Show title and content, both are editable, and 1 buttons, Update -->
<!-- Card title should say Edit Article -->

<div style="background-color: var(--dark); width: 100%; padding: 20px 0px; margin-bottom: 15px">
  <h2 class="tech-brand">Your Dashboard</h2>
</div>

<div class="card">
  <div class="card-header">
    <h3 style="color: var(--primary)">Edit Article</h3>
  </div>
  <div class="card-body">
    <form>
      <label class="form-label" for="update-title">Title</label>
      <input class="form-input" value="{{title}}" type="text" id="update-title">

      <label class="form-label" for="update-text">Content</label>
      <textarea class="form-textarea" id="update-text">{{text}}</textarea>

      <button class="btn btn-primary update-article" style="padding: 15px 20px; margin: 20px 0px;" type="button" data-id="{{id}}">Update Article</button>
      <button class="btn btn-primary delete-article" style="padding: 15px 20px;" type="button" data-id="{{id}}">Delete</button>
    </form>
  </div>
</div>

<script src="/js/editarticle.js"></script>
