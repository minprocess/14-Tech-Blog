<div style="background-color: var(--dark); width: 100%; padding: 20px 0px; margin-bottom: 15px">
  <h2 class="tech-brand">The Tech Blog</h2>
</div>

<div class="card">
  <div class="card-header">
    <h2 style="color: var(--primary);">Login</h2>
  </div>
  
  <div class="card-body">
    <form class="form login-form">
      <label for="name-login" class="form-label">Username</label>
      <input class="form-input" type="text" id="name-login">

      <label for="password-login" class="form-label">Password</label>
      <input class="form-input" type="password" id="password-login">

      <button class="btn btn-primary" style="padding: 15px 0px; margin-top: 15px" type="submit">Login!</button>
    </form>
    <h4 style="width: 300px; padding: 10px; "><a href="/signup" style="color: blue;">Sign up instead</a></h4>
  </div>
</div>

